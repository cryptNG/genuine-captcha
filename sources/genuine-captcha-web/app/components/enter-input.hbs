 <div class="inputbox light" {{did-insert this.didInsertComponent}}>
    <input name={{@id}} class="{{if this.hasValueInserted ' active'}}" type="text"
      placeholder="" value={{readonly @inputContent}} {{on 'keyup' @onContentChange}}>
    <span class="invalid-hex{{if @isInvalidInput ' active'}}">{{#if
      @isInvalidInput}}{{@invalidMessage}}{{/if}}</span>
    <button class="btn-clear-input{{if this.hasValueInserted ' active'}}" type="button" {{on 'click' @clearInput}}>X</button>
    
    <label for="{{@id}}" class="{{if this.hasValueInserted 'active'}}">{{yield to='labelContent'}}</label>
  </div>